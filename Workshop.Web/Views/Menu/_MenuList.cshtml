@model IEnumerable<Workshop.Core.DTOs.MenuDTO>;
@using Workshop.Resources;

@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Common> Common
@inject IStringLocalizer<Messages> Message

<table class="table table-bordered table-hover w-100 text-center main-table">
    <thead>
        <tr>
            <th>@Common["Code"]</th>
            <th>@Common["ShortName"]</th>
            <th>@Common["Description"]</th>
            <th>@Common["Status"]</th>
            <th>@Common["Label_Action"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.GroupCode
                </td>
                <td>
                    @item.GroupName
                </td>
                <td>
                    @(System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName == "en"
                                    ? item.PrimaryDescription
                                    : item.SecondaryDescription)
                </td>

                <td>
                    <div class="form-check form-switch d-flex justify-content-center">
                        <input class="form-check-input" type="checkbox" disabled @(item.IsActive ? "checked" : "")>
                    </div>
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Menu", new { Id = @item.Id })" class="btn btn-info btn-sm add-record"><i class="fad fa-pencil"></i>&nbsp;@Common["Button_Edit"]</a>
                    <button class="btn btn-danger btn-sm" onclick="deleteMenu(@item.Id)">
                        <i class="fad fa-trash"></i>&nbsp;@Common["Delete"]
                    </button>

                </td>
            </tr>
        }

    </tbody>
</table>
@if (Model.Count() > 0)
{
    <input id="total_pages" value="@(Model.Count() > 0 ? Math.Ceiling((decimal)Model.ToList()[0].TotalPages / 25) : 0)" hidden />
}
<script src="~/js/site.js"></script>