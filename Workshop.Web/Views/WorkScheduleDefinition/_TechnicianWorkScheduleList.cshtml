@model IEnumerable<Workshop.Core.DTOs.TechnicianWorkScheduleDTO>
@using Workshop.Resources;

@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Common> Common
@inject IStringLocalizer<Messages> Message

<!--           I REMOVED YOUR INLINE STYLES -_-          -->

<table class="table table-striped table-hover main-table w-100">
    <thead>
        <tr>
            <th>@Common["Label_Name"]</th>
            <th>@Common["Label_Date"]</th>
            <th>@Common["Label_WorkingHours"]</th>
            <th>@Common["Label_Action"]</th>
        </tr>
    </thead>
    @if (Model != null)
    {
        <tbody>
            @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PrimaryName</td>
                        <td>
                            @item.WorkingDateFrom?.ToString("yyyy-MM-dd")
                        </td>
                        <td>
                            <div class="slots-container d-flex flex-wrap justify-content-center">
                                @if (!string.IsNullOrEmpty(item.WorkingTimes))
                                {
                                    foreach (var slot in item.WorkingTimes.Split(','))
                                    {
                                        <div class="slot-box" title="@slot.Trim()">
                                            @slot.Trim()
                                        </div>
                                    }
                                }
                                else
                                {
                                    <span>غير محدد</span>
                                }
                            </div>
                        </td>
                       
                        <td>
                            <a href="@Url.Action("Edit", "WorkScheduleDefinition", new { id = item.FK_TechnicianId })"
                               class="btn btn-info btn-sm add-record">
                                <i class="fad fa-pencil"></i>&nbsp;@Common["Button_Edit"]
                            </a>
                        </td>
                    </tr>
                
            }
        </tbody>
      
    }
</table>

@if (Model.Count() > 0)
{
    <input id="total_pages" value="@Math.Ceiling((decimal)Model.ToList()[0].TotalPages / 25)" hidden />
}

