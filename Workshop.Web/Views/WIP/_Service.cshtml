@using Workshop.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Common> Common
@inject IStringLocalizer<Messages> Message

<div class="tab-pane fade" id="tabService" role="tabpanel">
    <div class="row">
        <div class="col-xl-6">
            <div class="card h-100">
                <div class="card-header"><h5 class="mb-0">@Common["Title_Warranty"]</h5></div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-lg-6"><label class="form-label">@Common["Label_Manufacturer"]</label><input type="date" class="form-control flat-picker" id="WarManufacturer"></div>
                        <div class="col-lg-6"><label class="form-label">@Common["Label_Mileage"]</label><input type="number" class="form-control" id="WarMileage" value="0"></div>
                        @* <div class="col-lg-6"><label class="form-label">@Common["Label_Body"]</label><input type="date" class="form-control flat-picker" id="WarBody"></div>
                        <div class="col-lg-6"><label class="form-label">@Common["Label_Extended"]</label><input type="date" class="form-control flat-picker" id="WarExtended"></div> *@
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6">
            <div class="card h-100">
                <div class="card-header"><h5 class="mb-0">@Common["Title_Dates"]</h5></div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-lg-6"><label class="form-label">@Common["Label_Service"]</label><input type="date" class="form-control flat-picker" id="DateService"></div>
                        <div class="col-lg-6"><label class="form-label">@Common["Label_MOT"]</label><input type="date" class="form-control flat-picker" id="DateMOT" value="@ViewBag.MOTDate"></div>
                        @*< div class="col-lg-6"><label class="form-label">@Common["Label_Emissions"]</label><input type="text" class="form-control" id="DateEmissions"></div>
                        <div class="col-lg-6"><label class="form-label">@Common["Label_Registered"]</label><input type="date" class="form-control flat-picker" id="DateRegistered"></div> *@
                        <div class="col-lg-6"><label class="form-label">@Common["Label_Delivered"]</label><input type="date" class="form-control flat-picker" id="DateDelivered"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
