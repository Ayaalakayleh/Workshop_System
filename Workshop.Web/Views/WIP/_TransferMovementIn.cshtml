    // New function to calculate amounts using VatRate from view model
    function calculatePettyCashAmounts() {
        var partsCost = parseFloat($('#PettyCash_PartsCost').val()) || 0;
        var laborCost = parseFloat($('#PettyCash_LaborCost').val()) || 0;
        var isNotTaxable = $('#PettyCash_NotTaxable').is(':checked');
        var vatRate = isNotTaxable ? 0 : parseFloat($('#PettyCash_VatRate').val()) || 0;

        // Calculate Total Invoice (Parts + Labor)
        var totalInvoice = partsCost + laborCost;
        $('#PettyCash_TotalInvoice').val(totalInvoice.toFixed(2));

        // Calculate VAT Amount using VatRate
        var vatAmount = totalInvoice * (vatRate / 100);
        $('#PettyCash_Vat').val(vatAmount.toFixed(2));

        // Calculate Net Amount (Total Invoice + VAT)
        var netAmount = totalInvoice + vatAmount;
        $('#PettyCash_NetAmount').val(netAmount.toFixed(2));
    }

