@model Workshop.Core.DTOs.RTSCodeWithAllowedTimeDTO;
@using Workshop.Resources;

@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Common> Common
@inject IStringLocalizer<Messages> Message

<table class="table table-bordered table-hover w-100 text-center main-table">
    <thead>
        <tr>
            <th>@Common["Code"]</th>
            <th>@Common["Label_PrimaryName"]</th>
            <th>@Common["Label_Secondaryname"]</th>
            <th>@Common["Status"]</th>
            <th>@Common["Label_Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RTSCodes)
        {
            <tr>
                <td>
                    @item.Code
                </td>
                <td>
                    @item.PrimaryName
                </td>
                <td>
                    @item.SecondaryName
                </td>
                <td>
                    <div class="form-check form-switch m-0 d-flex justify-content-center">
                        <input class="form-check-input" type="checkbox" disabled @(item.IsActive ? "checked" : "")>
                    </div>
                </td>
                <td>
                    <a href="@Url.Action("Edit", "RTSCode", new { Id = item.Id })" class="btn btn-info btn-sm add-record my-1"><i class="fad fa-pencil"></i>&nbsp;@Common["Button_Edit"]</a>
                    <button class="btn btn-danger btn-sm DeleteBTN my-1" data-id="@item.Id">
                        <i class="fad fa-trash"></i>&nbsp;@Common["Delete"]
                    </button>
                </td>
            </tr>
        }

    </tbody>
</table>
@if (Model.RTSCodes.Count() > 0)
{
    <input id="total_pages" value="@(Model.RTSCodes.Count() > 0 ? Math.Ceiling((decimal)Model.RTSCodes.ToList()[0].TotalPages / 25) : 0)" hidden />
}
<script src="~/js/site.js"></script>
