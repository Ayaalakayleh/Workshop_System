@using Microsoft.Extensions.Localization
@using Workshop.Resources

@model List<Workshop.Core.DTOs.ExternalWorkshopExp.MExternalWorkshopExpDTO> 

@inject IStringLocalizer<Common> Common
@inject IStringLocalizer<Messages> Message

@{
    ViewBag.Title = Common["External_Workshop_Exp"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr px-2">
                <h2 class="font-weight-bold">@Common["ExternalWorkshopMaintenanceInvoice"]</h2>
                @* @if (BaseHttpContext.UserHasPermission(Permissions.CollectionCreate)) *@
                @if (true)
                {
                    <a href="@Url.Action("Create", "Collection")" class="btn btn-outline-primary add-record"><i class="fa fa-plus"></i>&nbsp;@Common["Button_AddNew"]</a>
                }
            </div>
            <div class="panel-container show">
                <div class="panel-content text-start">
                    <div class="row">
                        <div class="col-md-4 col-sm-12">
                            <div class="form-group">
                                <label>@Common["ExternalWorkshop"]</label>
                                @Html.DropDownList("ExternalWorkshopId", (IEnumerable<SelectListItem>) ViewBag.ExternalWorkshopList, Common["ExternalWorkshop"], new { @class = "form-control " })
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12" ShowDate">
                            <div class="form-group" id="mYear">
                                <label>@Common["Label_FromDate"]</label>
                                <div class="form-group">
                                    @Html.Editor("FromDate", new { htmlAttributes = new { @class = "form-control flat-picker", id = "FromDate", type = "date" }})
                                    
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12" ShowDate">
                            <div class="form-group" id="mYear">
                                <label>@Common["Label_ToDate"]</label>
                                <div class="input-group">
                                    @Html.Editor("ToDate", new { htmlAttributes = new { @class = "form-control flat-picker", id = "ToDate", type = "date"}})
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="text-center mt-3">
                        <button id="searchMaintenance" type="button" class="btn btn-primary btn-w-m"><i class="fa fa-search"></i>&nbsp;@Common["Button_Search"]</button>
                        <input type="hidden" id="hidsearchMaintenanceDefinitions" value="0" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 
<hr />
<!-- datatable start -->
<div id="contentList">
    @Html.Partial("_MaintenanceList", Model)
</div>
<div class="d-flex align-items-center justify-content-end">
    <div class="mb-5 row" id="contentPager" hidden></div>
</div>
<!-- datatable end -->
<script>
    var RazorVars = {
        indexUrl: '@Url.Action("Index", "Collection")',
    };
</script>
<script src="~/js/definitions/Collection.js"></script>


