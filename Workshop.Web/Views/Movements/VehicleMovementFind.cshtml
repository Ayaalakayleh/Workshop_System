<script>
    $(document).ready(function () {
        if ($("#GettingVehicleId").val() > 0) {
            GetVehicleData();
        }
        $(".lc-picker-contents div:nth-child(8)").trigger("click");
    });

    function GetVehicleData() {
        var type = '@Model.IsExternal' == 'True' ? 2 : 1;

        $.ajax({
            type: "GET",
            url: "@Url.Action("GetDetails", "VehicleDefinition")" + '?id=' + $("#GettingVehicleId").val() + "&Type=" + type,
            dataType: "JSON",
            success: function (Data) {
                $("#VehicleManufacturer").text(Data.RefManufacturers.ManufacturerPrimaryName);
                $("#VehicleClass").text(Data.RefVehicleClasses.VehicleClassPrimaryName);
                $("#VehiclePlateNo").text(Data.PlateNumber);
                $("#VehicleModel").text(Data.RefVehicleModels.VehicleModelPrimaryName);
            }
        });

        $.ajax({
            type: "GET",
            url: "@Url.Action("GetStrike", "Movements")" + '?MovementId=' + @Model.MovementId,
            dataType: "JSON",
            success: function (Data) {
                if (Data != "") {
                    let jsonObject = JSON.parse(Data);
                    for (var i = 0; i < jsonObject.length; i++) {
                        var shapetype = jsonObject[i].type;
                        var xcoord = jsonObject[i].x + 35;
                        var ycoord = jsonObject[i].y + 23;
                        var $shape = $('<div class="shape shape-' + i + '" id="' + shapetype + '"></div>');
                        $shape.css({ 'left': xcoord - 2, 'top': ycoord - 2 });
                        $("#panel").append($shape);
                    }
                }
            }
        });
    }

    var cuspond;
    var validCusPhoto = true;

    $(document).ready(function () {
        var inputElement = document.querySelector('.movementDocument');
        var file = {};
        var files = [];
        file.files = files;

        @foreach (var item in Model.MovementInvoice)
        {
                    <text>
                        var source = @FileService.GetFileFullPath(@item.FileName, @item.FilePath);
                        var fi = { "source": source, options: { type: 'local' } };
                        file.files.push(fi);
                    </text>
        }

        cuspond = FilePond.create(inputElement, {
            imageCropAspectRatio: '1:1',
            acceptedFileTypes: ['image/png', 'image/jpeg', 'image/PNG', 'application/pdf'],
            fileMetadataObject: {
                'markup': [[ 'rect', { left:0, right:0, bottom:0, height:'60px', backgroundColor:'rgba(0,0,0,.5)' } ]]
            },
            allowMultiple: true,
            files: files,
            server: {
                load: (uniqueFileId, load) => { fetch(uniqueFileId).then(res => res.blob()).then(load); }
            },
            onactivatefile: function (file) {
                var win = window.open(file.serverId);
                win.focus();
            }
        });
    });
</script>
